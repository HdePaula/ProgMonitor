from tkinter import Tk, Label
from PIL import ImageTk, Image

# Criar uma instância da janela Tkinter
root = Tk()

# Carregar a imagem usando a biblioteca Pillow
image = Image.open("image/galaxia.jpeg")

# Criar um objeto de imagem Tkinter
tk_image = ImageTk.PhotoImage(image)

# Criar um widget de rótulo e definir a imagem como seu conteúdo
label = Label(root, image=tk_image)
label.pack()

# Iniciar o loop principal da janela
root.mainloop()