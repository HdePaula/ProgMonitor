import tkinter as tk


# Função para desenhar uma linha no canvas
def draw_line(canvas, x1, y1, x2, y2, color):
    canvas.create_line(x1, y1, x2, y2, fill=color)


root = tk.Tk()

# Cria o frame
frame = tk.Frame(root, bg="red")
frame.grid(row=0, column=0, sticky="nsew")

# Configura o dimensionamento automático do frame
root.grid_rowconfigure(0, weight=1)
root.grid_columnconfigure(0, weight=1)

# Cria o canvas dentro do frame
canvas = tk.Canvas(frame, bg="red", height=200)
canvas.grid(row=0, column=0, sticky="nsew")

# Configura o dimensionamento automático do canvas
frame.grid_rowconfigure(0, weight=1)
frame.grid_columnconfigure(0, weight=1)

# Adiciona a linha ao canvas com largura de 300
canvas.create_line(0, 100, 300, 100, width=2)

root.mainloop()